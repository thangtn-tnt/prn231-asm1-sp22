@using BusinessObject;
@model Member

<form method="post">
    <div class="container border p-4">
        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <h1>Add New Member</h1>
            </div>
        </div>
        <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Email" type="text" class="form-control" placeholder="Email..." />
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="CompanyName" type="text" class="form-control" placeholder="CompanyName..." />
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="City" type="text" class="form-control" placeholder="City..." />
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Country" type="text" class="form-control" placeholder="Country..." />
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Password" type="text" class="form-control" placeholder="Password..." />
            </div>
            <div class="col-6 offset-3 pb-2">
                <button type="submit" class="form-control btn-success" value="Submit">Add Member</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}