<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Member List</h1>
        </div>
        <div class="col text-right pt-1">
            <a asp-controller="Member" asp-action="Add" asp-area="Manage" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Add New Member</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Email
                </th>
                <th>
                    Company Name
                </th>
                <th>
                    City
                </th>
                <th>
                    Country
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Email</td>
                    <td>@item.CompanyName</td>
                    <td>@item.City</td>
                    <td>@item.Country</td>
                    <td>
                        <a asp-controller="Member" asp-action="Update" asp-route-id="@item.MemberId" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Member" asp-action="Delete" asp-route-id="@item.MemberId" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>