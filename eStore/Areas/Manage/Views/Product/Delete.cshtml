@model ProductDTO

<form asp-action="Delete">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Product</h1>
        <hr />

        <input hidden asp-for="ProductId" />
        <div class="row">
            <div class="col-2">
                <label asp-for="ProductName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ProductName" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="CategoryName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CategoryName" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Weight" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Weight" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="UnitPrice" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="UnitPrice" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="UnitsInStock" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="UnitsInStock" disabled class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="Index" asp-controller="Product" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
