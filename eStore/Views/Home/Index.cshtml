@using System.Globalization;
@{
    ViewData["Title"] = "Home Page";
}

@{
    var culture = CultureInfo.CreateSpecificCulture("vi-VN");
    var customFormat = (NumberFormatInfo)culture.NumberFormat.Clone();
    customFormat.CurrencySymbol = "VND";
}

<form>
    <div class="container row">
        @foreach (var product in Model)
        {
            <div class="col-4 ">
                <div class="p-0 my-3 border">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="card-title text-success">@product.ProductName</h3>
                            <span class="badge badge-light mb-2 ">@product.Category.CategoryName</span>
                            <p class="card-text">Weight: @Html.Raw(product.Weight)</p>
                            <div class="row">
                                <div class="col pt-1">
                                    <span style="font-size:23px;">@string.Format(customFormat, "{0:c}", product.UnitPrice)</span>
                                </div>
                                <div class="col">
                                    <a asp-controller="Product" asp-action="Details" asp-route-id="1"
                                   class="btn btn-success form-control">Details</a>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</form>