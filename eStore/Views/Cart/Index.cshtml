@{
}
<div class="col-6">
    <div class="my-3 border">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-success">Ayato</h3>
                <span class="badge badge-light mb-2 align-content-center">Sea Game</span>
                <div class="row">
                    <div class="col">
                        <span class="card-text">Weight: @string.Format("{0:n1} kg", 10)</span>
                    </div>
                    <div class="col  text-right">
                        <span class="card-text">Available: @Html.Raw(1)</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col pt-1">
                        <span style="font-size: 22px;">@string.Format("{0:c}", 12212)</span>
                    </div>
                    <div class="col">
                        <a asp-controller="Order" asp-action="Index" asp-route-id="1"
                           class="btn btn-success form-control">Order</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>