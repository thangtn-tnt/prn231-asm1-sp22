@using eStore.Models.Dto;
@model RegisterationRequestDTO

@{
    ViewData["Title"] = "Register";
}

<form method="post">
    <div class="container border p-4">
        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <h1>Register</h1>
            </div>
        </div>
        <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Email" class="form-control" placeholder="Email..." />
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="CompanyName" class="form-control" placeholder="CompanyName..." />
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="City" class="form-control" placeholder="City..." />
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Country" class="form-control" placeholder="Country..." />
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Password" class="form-control" placeholder="Password..." />
            </div>
            <div class="col-6 offset-3 pb-2">
                <button type="submit" class="form-control btn-success" value="Submit">Register</button>

            </div>
        </div>
    </div>


</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}